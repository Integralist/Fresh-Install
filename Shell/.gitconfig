[user]
	name = Integralist
	email = mark.mcdx@gmail.com

[alias]
    up = "!git remote update -p; git merge --ff-only @{u}"
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    st = status
    sts = status -sb
    unstage = reset HEAD --

[core]
	excludesfile = ~/.gitignore_global
    editor = vim
    ignorecase = false
    ; pager = `brew --prefix git`/share/git-core/contrib/diff-highlight/diff-highlight | less

[color]
	ui = true
	commit = red

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green

[color "status"]
	added = red
	changed = blue
	untracked = magenta

[push]
    default = upstream

[apply]
    whitespace = nowarn

[branch "develop"]
    rebase = true
[mergetool]
	prompt = true
[merge]
	tool = vimdiff
	conflictstyle = diff3
